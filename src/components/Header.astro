---
import Logo from "./Logo.astro"
import ThemeToggle from "./ThemeToggle.astro"
export const prerender = true
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
        font-family: sans-serif;
        transform: scale(0.8);
        transform-origin: top;
      }
      header {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 99;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 2rem;
        transition: transform 1s ease-in-out;
        transform: translateY(-100px);
      }
      .logo {
        width: 100px;
        height: 100px;
      }
      .title {
        display: flex;
        align-items: center;
        cursor: pointer;
        font-size: 2rem;
      }
      .title span {
        font-weight: 800;
        background: linear-gradient(to right, #f6e05e, #fc8181);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-right: 0.5rem;
      }
      #themeToggle {
        border: 0;
        opacity: 1;
      }
      #message-container {
        opacity: 1;
        transition: transform 1s ease-in-out, opacity 1s ease-in-out;
        transform: translateY(0);
      }
    </style>
  </head>
  <body>
    <header>
      <div class="logo">
        <img src="logo.png" alt="Logo" />
      </div>
      <div class="title" onclick="scrollToTop()">
        <span>ChatGPT</span>
      </div>
      <div id="themeToggle">
        <button>Toggle Theme</button>
      </div>
    </header>
    <div id="message-container">
      <!-- Messages go here -->
    </div>
    <script>
      function scrollToTop() {
        window.scrollTo({
          top: 0,
          behavior: "smooth"
        });
      }
    </script>
  </body>
</html>
